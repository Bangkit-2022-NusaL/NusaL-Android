<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NusaL" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_200</item>
        <item name="colorPrimaryVariant">@color/black_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_200</item>
        <item name="colorSecondaryVariant">@color/white_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/animation_slide_right</item>
        <item name="android:activityOpenExitAnimation">@anim/animation_slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/animation_slide_left</item>
        <item name="android:activityCloseExitAnimation">@anim/animation_slide_out_right</item>
    </style>
</resources>